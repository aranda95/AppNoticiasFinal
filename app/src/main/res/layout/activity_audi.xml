


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="alex.estudio.com.com.appnoticias.NoticiaPrimera"
    android:background="#c1a5a9e2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/fotosAudi">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagen"
            android:src="@drawable/audi1"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/atrasAudi"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_below="@+id/fotosAudi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/flecha1" />

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:id="@+id/adelanteAudi"
        android:layout_below="@+id/fotosAudi"
        android:layout_alignRight="@+id/fotosAudi"
        android:layout_alignEnd="@+id/fotosAudi"
        android:layout_marginRight="41dp"
        android:background="@drawable/flecha2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/menuAudi"
        android:background="@drawable/menu"
        android:layout_below="@+id/fotosAudi"
        android:layout_centerHorizontal="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adelanteAudi">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoAudi"
            android:textStyle="bold|italic" />
    </LinearLayout>

    </ScrollView>

</RelativeLayout>
