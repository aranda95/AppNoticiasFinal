<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="alex.estudio.com.com.appnoticias.Main2Activity"
    android:background="#d6bec4eb">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="AUDI"
        android:id="@+id/noticiaAudi"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#928dff" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BENTLEY"
        android:id="@+id/noticiaBentley"
        android:layout_marginTop="30dp"
        android:background="#928dff"
        android:layout_below="@+id/noticiaAudi"
        android:layout_alignRight="@+id/noticiaAudi"
        android:layout_alignEnd="@+id/noticiaAudi" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="LEXUS"
        android:id="@+id/noticiaLexus"
        android:layout_marginTop="30dp"
        android:background="#928dff"
        android:layout_below="@+id/noticiaBentley"
        android:layout_alignRight="@+id/noticiaBentley"
        android:layout_alignEnd="@+id/noticiaBentley" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="PORSCHE"
        android:id="@+id/noticiaPorsche"
        android:layout_marginTop="30dp"
        android:background="#928dff"
        android:layout_below="@+id/noticiaLexus"
        android:layout_alignRight="@+id/noticiaLexus"
        android:layout_alignEnd="@+id/noticiaLexus" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="JAGUAR"
        android:id="@+id/noticiaJaguar"
        android:layout_marginTop="32dp"
        android:background="#928dff"
        android:layout_below="@+id/noticiaPorsche"
        android:layout_alignRight="@+id/noticiaPorsche"
        android:layout_alignEnd="@+id/noticiaPorsche" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="AUDI TT"
        android:id="@+id/noticiaAuditt"
        android:background="#928dff"
        android:layout_below="@+id/noticiaJaguar"
        android:layout_alignRight="@+id/noticiaJaguar"
        android:layout_alignEnd="@+id/noticiaJaguar"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/volver"
        android:background="@drawable/back"
        android:layout_alignBottom="@+id/noticiaAudi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
